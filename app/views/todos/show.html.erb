
<div class="card show">
  <p>
    <strong>Todo</strong> <br>
    <%= @todo.todo %>
  </p>

  <p>
    <strong>Due:</strong>
    <%= @todo.due.strftime('%d/%m/%Y at %I:%M%p') %>
  </p>

  <p>
    <strong>Completed:</strong>
    <%= @todo.completed %>
  </p>

  <p>
    <strong>Priority:</strong>
    <%= @todo.priority %>
  </p>


  <p>
    <strong>Time left to due date:</strong>
    <%= time_ago_in_words @todo.due %> left
  </p>

</div>
<div style="display: flex; padding: 5px; width: 50%;
justify-content: space-between; margin: 5px auto;">
  <%= link_to 'Back', todos_path, class: 'btn btn-danger' %>
  <%= link_to 'Edit', edit_todo_path(@todo) , class: 'btn btn-info' %>
</div>

